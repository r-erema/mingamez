{% extends 'app/portal/layout.html.twig' %}

{% block body %}
<header>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            {% for i, game in topGames %}
            <li data-target="#carouselExampleIndicators" data-slide-to="{{ i }}" {% if i == 0 %}class="active"{% endif %}></li>
            {% endfor %}
        </ol>
        <div class="carousel-inner" role="listbox">
            {% for i, game in topGames %}
            <div class="carousel-item {% if i == 0 %}active{% endif %}" style="background-image: url('{{ game.images.filterScreenshots.first.url.value }}')">
                <div class="carousel-caption d-none d-md-block">
                    <a href="{{ game.url.value }}" class="btn btn-light" target="_blank">{{ game.name }}</a>
                    {#<p>This is a description for the first slide.</p>#}
                </div>
            </div>
            {% endfor %}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</header>

<!-- Page Content -->
<div class="container">

    <h1 class="my-4"></h1>

    <h2></h2>

    <div class="row">
        {% for i, game in otherGames %}
            <div class="col-lg-4 col-sm-6 portfolio-item">
                <div class="card h-100">
                    <a href="{{ game.url.value }}"><img class="card-img-top" src="{{ game.images.filterPreviews.first.url.value }}" alt=""></a>
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="{{ game.url.value }}" target="_blank">{{ game.name }}</a>
                        </h4>
                        {#<p class="card-text">Lorem ipsum</p>#}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <hr>

</div>
<!-- /.container -->
{% endblock %}
